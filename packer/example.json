{
  "builders": [
    {
      "type": "amazon-ebs",
      "profile": "default",
      "region": "us-west-1",
      "ami_name": "ubuntu-nginx",
      "source_ami": "ami-0d382e80be7ffdae5",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "script.sh"
    },
    {
      "type": "file",
      "source": "index.html",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "inline": ["sudo cp /tmp/index.html /var/www/html/"]
    }
  ]
}